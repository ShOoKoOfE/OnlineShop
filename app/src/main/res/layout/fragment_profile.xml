<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="project.ui.activity.HomeActivity">


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical"
      android:paddingBottom="15dp"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      android:paddingTop="15dp">

      <TextView
        android:id="@+id/txtUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="User Name"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"/>

      <TextView
        android:id="@+id/txtMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Mobile"
        android:textAlignment="center"
        android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/linearProfileFactor"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="@drawable/gray_border"
      android:orientation="horizontal"
      android:paddingBottom="15dp"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      android:paddingTop="15dp">

      <TextView
        android:id="@+id/txtHistory"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="مشاهده سوابق سفارشات"
        android:textAlignment="center"
        android:textStyle="bold"/>

      <ImageButton
        android:id="@+id/btnHistory"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:gravity="center"
        app:srcCompat="@drawable/ic_history"/>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/linearFavorite"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="@drawable/gray_border"
      android:orientation="horizontal"
      android:paddingBottom="15dp"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      android:paddingTop="15dp">

      <TextView
        android:id="@+id/txtFavorite"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="لیست مورد علاقه"
        android:textAlignment="center"
        android:textStyle="bold"/>

      <ImageButton
        android:id="@+id/btnFavoriteList"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:gravity="center"
        app:srcCompat="@drawable/ic_black_favorite"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="@drawable/gray_border"
      android:orientation="horizontal"
      android:paddingBottom="15dp"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      android:paddingTop="15dp">

      <TextView
        android:id="@+id/txtAddress"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="لیست آدرس ها"
        android:textAlignment="center"
        android:textStyle="bold"/>

      <ImageButton
        android:id="@+id/btnAddress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:gravity="center"
        app:srcCompat="@drawable/ic_address"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="@drawable/gray_border"
      android:orientation="horizontal"
      android:paddingBottom="15dp"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      android:paddingTop="15dp">

      <TextView
        android:id="@+id/txtAccount"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="شماره کارت بانکی"
        android:textAlignment="center"
        android:textStyle="bold"/>

      <ImageButton
        android:id="@+id/btnAccount"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:gravity="center"
        app:srcCompat="@drawable/ic_account"/>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/linearExit"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="@drawable/gray_border"
      android:orientation="horizontal"
      android:paddingBottom="15dp"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      android:paddingTop="15dp">

      <TextView
        android:id="@+id/txtExit"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="خروج از حساب کاربری"
        android:textAlignment="center"
        android:textColor="#ef394f"
        android:textStyle="bold"/>

      <ImageButton
        android:id="@+id/btnExit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:gravity="center"
        app:srcCompat="@drawable/ic_exit"/>

    </LinearLayout>
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
